<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SIOT.Views.Templates.NotificationItemTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SIOT.Converters"
    xmlns:models="clr-namespace:SIOT.Models"
    xmlns:views="clr-namespace:SIOT.Views"
    x:DataType="models:Notification">

    <ContentView.Content>
        <Border
            Margin="0,5"
            BackgroundColor="{DynamicResource BasePageColor}"
            MinimumHeightRequest="90">
            <Grid
                Padding="15,10"
                ColumnDefinitions="40, *"
                ColumnSpacing="15"
                RowDefinitions="Auto, *"
                RowSpacing="0"
                VerticalOptions="CenterAndExpand">

                <!--  Image Icon  -->
                <Image
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Aspect="AspectFit"
                    HeightRequest="30"
                    Source="{Binding Icon}"
                    VerticalOptions="Center" />

                <!--  Title  -->
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    FontFamily="SemiBoldFont"
                    HorizontalOptions="Start"
                    Text="{Binding Title}"
                    VerticalOptions="End" />

                <!--  Content  -->
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    FontSize="14"
                    HorizontalOptions="Start"
                    Text="{Binding Description}"
                    VerticalOptions="Start" />
            </Grid>
        </Border>
    </ContentView.Content>
</ContentView>
