                VerticalOptions="End" />-->

            <!--  Main Login Elements  -->
            <VerticalStackLayout
                Grid.Row="2"
                HorizontalOptions="Fill"
                Spacing="20"
                VerticalOptions="CenterAndExpand">

                <Border
                    Margin="0"
                    Padding="0"
                    BackgroundColor="{DynamicResource MainWrapperBackgroundColor}"
                    HeightRequest="52"
                    HorizontalOptions="FillAndExpand"
                    Stroke="{DynamicResource EntryAndEditorsBorderColor}">
                    <StackLayout
                        Margin="16,2"
                        HorizontalOptions="Fill"
                        Orientation="Horizontal"
                        VerticalOptions="CenterAndExpand">
                        <Label
                            FontFamily="MauiKitIcons"
                            FontSize="22"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            Text="{x:Static views:MauiKitIcons.Account}"
                            TextColor="{DynamicResource BaseIconColor}"
                            VerticalOptions="CenterAndExpand" />

                        <handlers:BorderlessEntry
                            Margin="8,0"
                            BackgroundColor="{DynamicResource MainWrapperBackgroundColor}"
                            FontFamily="RegularFont"
                            HeightRequest="50"
                            HorizontalOptions="FillAndExpand"
                            Keyboard="Default"
                            Placeholder="邮箱或手机号"
                            PlaceholderColor="{DynamicResource BaseLightTextColor}" />
                    </StackLayout>
                </Border>

                <Border
                    Margin="0"
                    Padding="0"
                    BackgroundColor="{DynamicResource MainWrapperBackgroundColor}"
                    HeightRequest="52"
                    HorizontalOptions="FillAndExpand"
                    Stroke="{DynamicResource EntryAndEditorsBorderColor}">
                    <StackLayout
                        Margin="16,2"
                        Orientation="Horizontal"
                        VerticalOptions="CenterAndExpand">
                        <Label
                            FontFamily="MauiKitIcons"
                            FontSize="22"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            Text="{x:Static views:MauiKitIcons.Lock}"
                            TextColor="{DynamicResource BaseIconColor}"
                            VerticalOptions="CenterAndExpand" />

                        <handlers:BorderlessEntry
                            Margin="8,0"
                            BackgroundColor="{DynamicResource MainWrapperBackgroundColor}"
                            FontFamily="RegularFont"
                            HeightRequest="50"
                            HorizontalOptions="FillAndExpand"
                            Keyboard="Default"
                            IsPassword="True"
                            Placeholder="输入你的密码"
                            PlaceholderColor="{DynamicResource BaseLightTextColor}" />
                    </StackLayout>
                </Border>

                <!--<HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <CheckBox />
                    <Label
                        FontAttributes="Bold"
