<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SIOT.Views.FontIconsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:handlers="clr-namespace:SIOT.Handlers"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:localization="clr-namespace:SIOT.Resources.Translations"
    xmlns:selectors="clr-namespace:SIOT.Selectors"
    xmlns:views="clr-namespace:SIOT.Views"
    Title="{localization:Translate PageTitleFontIcon}"
    BackgroundColor="{DynamicResource BasePageColor}">
    <ContentPage.Resources>
        <DataTemplate x:Key="MauiKitIconsTemplate">
            <ViewCell>
                <Grid
                    Padding="20,10"
                    ColumnDefinitions="30,*"
                    ColumnSpacing="15">
                    <Label
                        FontFamily="MauiKitIcons"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="{Binding Value}"
                        TextColor="{DynamicResource PrimaryColor}"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                    <Label
                        Grid.Column="1"
                        FontFamily="RegularFont"
                        FontSize="15"
                        Text="{Binding Name}"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                </Grid>
            </ViewCell>
        </DataTemplate>

        <DataTemplate x:Key="FaBrandsTemplate">
