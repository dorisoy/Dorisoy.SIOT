<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SIOT.Views.Onboardings.StartBackgroundPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SIOT.Controls"
    Title=""
    BackgroundImageSource="bg_blue.png"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False"
    Shell.PresentationMode="Animated">
    <Grid RowDefinitions="*,Auto">

        <VerticalStackLayout
            Padding="30,50,30,20"
            HorizontalOptions="Center"
            Spacing="20"
            VerticalOptions="Center">
            <Border
                Padding="0"
                BackgroundColor="{DynamicResource White}"
                HeightRequest="90"
                HorizontalOptions="Center"
                Stroke="{DynamicResource White}"
                StrokeShape="{RoundRectangle CornerRadius=18}"
                StrokeThickness="3"
                WidthRequest="90">
                <controls:RoundedCornerImage
                    BackgroundColor="{DynamicResource White}"
                    HeightRequest="60"
                    HorizontalOptions="Center"
                    Source="logo.png"
                    Stroke="Transparent"
                    StrokeShape="{RoundRectangle CornerRadius=50}"
                    VerticalOptions="Center"
                    WidthRequest="60" />
            </Border>
            <Label
                FontAttributes="Bold"
                FontSize="22"
                HorizontalTextAlignment="Center"
                Style="{StaticResource Title2}"
                   Text="AppName"
                TextColor="{DynamicResource White}" />

            <Label
                Margin="0,15,0,0"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                Style="{StaticResource Title2}"
                   Text="WelcomeTitle"
                TextColor="{DynamicResource White}" />

            <Label
                HorizontalTextAlignment="Center"
                Style="{StaticResource PrimaryLabel}"
                   Text="WelcomeSubtitle"
                TextColor="{DynamicResource White}" />

            <Border
                Padding="15,5"
                BackgroundColor="{DynamicResource White}"
                HorizontalOptions="Center"
                Stroke="Transparent"
                StrokeShape="{RoundRectangle CornerRadius='8'}">
                <Label
                    FontSize="12"
                    HorizontalOptions="Center"
                    Text="Version 2.0"
                    TextColor="{DynamicResource PrimaryColor}"
                    VerticalOptions="Center" />
            </Border>
        </VerticalStackLayout>

        <VerticalStackLayout
            Grid.Row="1"
            Padding="30,0,30,50"
            HorizontalOptions="Fill"
            Spacing="15"
            VerticalOptions="End">
            <Button
                BackgroundColor="Transparent"
                BorderColor="{DynamicResource White}"
                BorderWidth="1"
                Clicked="TakeTour_Clicked"
                CornerRadius="14"
                FontAttributes="Bold"
                HeightRequest="50"
                    Text="Take Tour"
                TextColor="{StaticResource White}" />

            <Button
                BackgroundColor="{StaticResource Blue300Accent}"
                Clicked="Skip_Clicked"
                CornerRadius="14"
                HeightRequest="50"
                    Text="TakeTour"
                TextColor="{DynamicResource White}" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>