<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SIOT.Views.Pages.GrayPage"
             Title="GrayPage">
    <Grid BackgroundColor="Gray">
        <Label
            FontSize="20"
            Text="Gray page"
            TextColor="White"
            TextTransform="Uppercase"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="End" Margin="10" Spacing="10"
                               HeightRequest="30">
            <Image Source="flame_filled.png" Aspect="AspectFit"/>
            <Image x:Name="netImage" Source="https://www.itnetwork.cz/images/63461/mobile/apps_icon.png" Aspect="AspectFit"/>
            <Image Aspect="AspectFit">
                <Image.Source>
                    <FontImageSource Glyph="a"/>
                </Image.Source>
            </Image>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>