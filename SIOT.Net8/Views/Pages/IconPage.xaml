<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="SIOT.Views.Pages.IconPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SIOT.Views.Pages"
    xmlns:simpleCore="clr-namespace:SimpleToolkit.Core;assembly=SimpleToolkit.Core"
    Title="Icons">

    <ContentPage.Resources>
        <Style TargetType="simpleCore:Icon">
            <Setter Property="WidthRequest" Value="40" />
            <Setter Property="HeightRequest" Value="40" />
        </Style>
    </ContentPage.Resources>

    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <simpleCore:Icon Source="star.png" />
        <simpleCore:Icon Source="star.png" TintColor="Gray" />
        <simpleCore:Icon Source="star.png" TintColor="Orange" />
    </HorizontalStackLayout>
</ContentPage>