    <Color x:Key="PinkGradientStart">#d54381</Color>
    <Color x:Key="PinkGradientEnd">#7644ad</Color>

    <LinearGradientBrush x:Key="VioletGradient" EndPoint="1,0">
        <GradientStop Offset="0.1" Color="{StaticResource VioletGradientStart}" />
        <GradientStop Offset="1.0" Color="{StaticResource VioletGradientEnd}" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PinkGradient" EndPoint="1,0">
        <GradientStop Offset="0.1" Color="{StaticResource PinkGradientStart}" />
        <GradientStop Offset="1.0" Color="{StaticResource PinkGradientEnd}" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="OrangeGradient" EndPoint="1,0">
        <GradientStop Offset="0.1" Color="#ff9632" />
        <GradientStop Offset="1.0" Color="#e55313" />
    </LinearGradientBrush>
</ResourceDictionary>